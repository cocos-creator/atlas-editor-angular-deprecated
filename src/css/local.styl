.atlas-item {
    background-color: rgba( 0, 128, 255, 0.5 )
    margin: 2px
}

.atlas-item:hover {
    outline: 1px solid #000
}

.panel {
    background-color: #333
    border: 1px solid #000
    color: white
    padding: 10px;
}

.workspace {
    height: 100%
    min-height: 100%
    max-height: 100%
    overflow: hidden
    margin-right: right-sidebar-width
    margin-left: left-sidebar-width
}

.left.sidebar {
    position: fixed
    width: left-sidebar-width
    height: 100%
    top: 0
    left: 0
    z-index: 100
    box-shadow: 2px 0 3px 0 rgba(0,0,0,0.2)
}

.right.sidebar {
    position: fixed
    width: right-sidebar-width
    height: 100%
    top: 0
    right: 0
    z-index: 100
    box-shadow: -2px 0 3px 0 rgba(0,0,0,0.2)
}
